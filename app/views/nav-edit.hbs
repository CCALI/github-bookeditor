<button class="btn save">Done</button>
<nav>
{{#with navTree}}
  <ol>
  {{#recursive .}}
    <li class="editor-node">
      <div class="editor-drop-zone editor-drop-zone-before"></div>
      {{#if href}}
        <span class="editor-drop-zone editor-drop-zone-in" data-id="{{href}}">{{title}}</span>
      {{else}}
        <span class="editor-drop-zone editor-drop-zone-in">{{title}}</span>
      {{/if}}
      <div class="editor-drop-zone editor-drop-zone-after"></div>
      {{#if children}}
        <ol>
          {{{recursive children}}}
        </ol>
      {{/if}}
    </li>
  {{/recursive}}
  </ol>
{{/with}}
</nav>
